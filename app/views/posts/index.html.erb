<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">Welcome to Board</h1>
    <p class="lead">This is a free board enjoy!</p>
    <a class="btn btn-secondary" href="/posts/new" role="button">Write</a>
  </div>
</div>
<div class = "container">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Content</th>
        <th scope="col">User</th>
        <th scope="col">Date</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%=post.id%></th>
        <td><a href="/posts/show/<%=post.id%>"><%=post.title%></a></td>
        <td><%=post.user.email%></td>
        <td><%=time_ago_in_words(post.created_at)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
